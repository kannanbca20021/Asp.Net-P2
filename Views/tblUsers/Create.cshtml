@model LibraryMSMVC.Models.tblUser

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Add user</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="col-6 offset-3 card">
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-row form-group">
        <div class="col">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Soubhagya P" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>

        <div class="col">
            @Html.LabelFor(model => model.UserGender, htmlAttributes: new { @class = "control-label" })
            <br />
            <div class="col-11 card card-body ">
                @{
                    List<String> genderlist = new List<string>() { "Male", "Female", "Other", };
                    foreach (var gender in genderlist)
                    {
                        <div>
                            @Html.RadioButtonFor(model => model.UserGender, gender, new { htmlAttributes = new { @class = "form-control" } })

                            <span class="text-muted" style="padding-left:5px; padding-right:5px;">@gender</span>
                        </div>
                    }
                }
            </div>
            @Html.ValidationMessageFor(model => model.UserGender, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-row form-group">
        <div class="col">
            @Html.LabelFor(model => model.UserDep, htmlAttributes: new { @class = "control-label" })

            @Html.DropDownListFor(model => model.UserDep, new List<SelectListItem> {
            new SelectListItem{ Text="Ec", Value="Ec"},
            new SelectListItem{ Text="Cs", Value="Cs"},
            new SelectListItem{ Text="Mech", Value="Mech"},
            new SelectListItem{ Text="Civil", Value="Civil"},
            new SelectListItem{ Text="Bio", Value="Bio"},
            new SelectListItem{ Text="It", Value="It"},
           }, "Select department", new { @class = "form-control" })
            
            @Html.ValidationMessageFor(model => model.UserDep, "", new { @class = "text-danger" })

        </div>

        <div class="col">
            @Html.LabelFor(model => model.UserAdmNo, htmlAttributes: new { @class = "control-label" })
            
                @Html.EditorFor(model => model.UserAdmNo, new { htmlAttributes = new { @class = "form-control", placeholder = "2015360" } })
                @Html.ValidationMessageFor(model => model.UserAdmNo, "", new { @class = "text-danger" })
          
        </div>
    </div>
    <div class="form-row form-group">
        <div class="col">
            @Html.LabelFor(model => model.UserEmail, htmlAttributes: new { @class = "control-label" })
            
                @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "sou@gmail.com" } })
                @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
                <p class="text-danger">@Session["emailExists"]</p>
           
        </div>

        <div class="col">
            @Html.LabelFor(model => model.UserPass, htmlAttributes: new { @class = "control-label" })
            
                @Html.EditorFor(model => model.UserPass, new { htmlAttributes = new { @class = "form-control", placeholder = "123123pwd" } })
                @Html.ValidationMessageFor(model => model.UserPass, "", new { @class = "text-danger" })
           
        </div>
    </div>
    <div class="form-group">
        <button onclick="" type="submit" value="Submit" class="btn btn-sm btn-primary" data-toggle='tooltip' title='Submit user'>
            <i class="fas fa-check-circle"></i>
            Submit
        </button>
    </div>
    

</div>
}
<br />

<div class="btn btn-sm btn-secondary" data-toggle='tooltip' title='Back to user list'>
    <i class="fas fa-long-arrow-alt-left"></i>
    @Html.ActionLink("Back", "Index", null, new { @class = "", style = "text-decoration:none; color: white" })
</div>
<br />
<br />
