@model IEnumerable<LibraryMSMVC.Models.tblTransaction>

@{
    ViewBag.Title = "Requests";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Request list</h4>
<hr />

@*External stylesheet for data table plugins*@
<link rel="stylesheet" , href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" />
<link rel="stylesheet" , href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" />
<table width="100%" class="table table-hover table-bordered" id="example">
    <thead class="bg-success text-light">
        <tr>
            <th>
                Book Title
            </th>
            <th>
                Book ISBN
            </th>
            <th>
                Request Date
            </th>
            <th>
                User Name
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>
                BookTitle
            </th>
            <th>
                BookISBN
            </th>
            <th>
                TranDate
            </th>
            <th>
                UserName
            </th>
        </tr>
    </tbody>
</table>
<br />


@*Java scripts*@
@section scripts{
    @*External scripts for data table plugins*@
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script>
        @*Data table plugin*@
        $(document).ready(function () {
            $('#example').DataTable({
                "ajax": {
                    "url": "/AdminTransaction/GetAllRequests",
                    "type": "get",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "BookTitle" },
                    { "data": "BookISBN" },
                    { "data": "TranDate" },
                    { "data": "UserName" },
                    {
                        "data": "TranId", "render": function (idhere) {

                            return " <a onclick='acceptRequest()' class='btn btn-sm btn-primary text-light' data-toggle='tooltip' title='Accept book request' href='@Url.Action("AcceptRequest", "AdminTransaction")?tranId=" + idhere + "'> <i class='fas fa-check-circle'></i> Accept</a> <a onclick='rejectRequest()' class='btn btn-sm btn-danger text-light' data-toggle='tooltip' title='Reject book request' style='margin-left:px' href='@Url.Action("RejectRequest", "AdminTransaction")?tranId=" + idhere + "'> <i class='fas fa-times-circle'></i></i> Reject</a>";
                        },
                        "orderable": false,
                        "width": "160px"
                    }
                ],
                "language": {
                    "emptyTable": "No data found, Wait for the users to take action."
                }
            });
        });

        @*Scripts for request alert*@
        function acceptRequest(){
                alert("Book request accepted successfully")
        };

        @*Scripts for reject alert*@
        function rejectRequest(){
                alert("Book request rejected successfully")
        };
    </script>
}
